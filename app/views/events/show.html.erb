<div class="show-event-container">
  <div class="title-event text-center">
    <h1><%= @event.name %></h1>
    <h2><%= @event.category %></h2>
  </div>
  <div class= "container-fluid">
    <div class="row mx-0 px-4">
      <div class="col-lg-7 order-sm-2 col-sm-12 order-lg-1">
        <% if @event.picture.present? %>
          <div class="event-photo-present" style="background-image: url('<%= cl_image_path @event.picture %>')">

          </div>
        <% else %>
          <div class="event-photo-venue" style="background-image: url('<%= cl_image_path @event.venue.photo %>'); ">
          </div>
        <% end %>
      </div>
      <div class="col-lg-5 order-sm-1 col-sm-12 order-lg-2">
        <div class="event-details">
          <div class="event-details-content">
            <h3>Horaires: <%= @event.beginning_hour + ' - ' + @event.end_hour %></h3>
            <h3>Adresse: <%= @event.venue.address %></h3>
            <h3>Telephone: 0101010101</h3>
            <h2><i class="far fa-envelope"></i> Recevoir par email</h2>
            <p>
            <%=  fetch_theatre_records.call
            puts "#{@event['nom']} - #{@event['description']}" %>
            </p>
          </div>
        </div>
      </div>
    </div>

  </div>
  <div class="retour-event"></div>
</div>

